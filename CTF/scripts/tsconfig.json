{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "noEmit": true, 
    "resolveJsonModule": true,
    "target": "es2016",
    "module": "nodeNext",
    "moduleResolution": "nodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
}
